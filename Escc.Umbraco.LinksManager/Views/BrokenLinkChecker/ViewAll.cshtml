@model Escc.Umbraco.LinksManager.Models.BrokenLinks.BrokenLinksViewModel

<p></p>
@if (Model.ErrorMessage != null)
{
    <div class="panel panel-danger">
        <div class="panel-heading">
            <h3 class="panel-title">Error!</h3>
        </div>
        <div class="panel-body">
            <p>@Model.ErrorMessage</p>
        </div>
    </div>
}
else
{
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Broken Links [@Model.ViewResultsFrom - @(Model.ViewResultsFrom + 499)] out of @Model.TotalBroken</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-9 col-sm-offset-1 col-md-9 col-md-offset-1 col-lg-9 col-lg-offset-1">
                    @Html.RouteLink("<< 500", "ViewAll", new { PagedResults = "Previous", ViewResultsFrom = Model.ViewResultsFrom, TotalBroken = Model.TotalBroken }, new { @class = "btn btn-info" })
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2">
                    @Html.RouteLink("500 >>", "ViewAll", new { PagedResults = "Next", ViewResultsFrom = Model.ViewResultsFrom, TotalBroken = Model.TotalBroken }, new { @class = "btn btn-info" })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <p></p>
                    @{Html.RenderPartial("~/Views/Partials/_DataTable.cshtml", Model.BrokenLinksTable);}
                    <style>
                        td:first-child, td:nth-child(2) {word-wrap: break-word; word-break: break-all; white-space: normal;}                       
                        td:last-child{min-width: 100px;}
                    </style>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-9 col-sm-offset-1 col-md-9 col-md-offset-1 col-lg-9 col-lg-offset-1">
                    @Html.RouteLink("<< 500", "ViewAll", new { PagedResults = "Previous", ViewResultsFrom = Model.ViewResultsFrom, TotalBroken = Model.TotalBroken }, new { @class = "btn btn-info" })
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2">
                    @Html.RouteLink("500 >>", "ViewAll", new { PagedResults = "Next", ViewResultsFrom = Model.ViewResultsFrom, TotalBroken = Model.TotalBroken }, new { @class = "btn btn-info" })
                </div>
            </div>
        </div>
    </div>
                        }